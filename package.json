{
  "name": "context-savvy-mcp",
  "version": "2.0.1",
  "description": "A high-performance Model Context Protocol server that transforms Claude Desktop into a memory-enabled AI assistant with persistent context, secure command execution, and intelligent workflow automation.",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:simple": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "config": "tsx scripts/config-ui.ts",
    "dev": "tsx watch src/index.ts",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"config/**/*.{yaml,json}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"config/**/*.{yaml,json}\" \"*.{json,md}\"",
    "type-check": "tsc --noEmit",
    "health-check": "node scripts/health-check.js",
    "claude-config": "node scripts/claude-config.js",
    "create-workspace": "tsx scripts/create-test-fs-workspace.ts",
    "quick-setup": "node scripts/quick-setup.js",
    "prepack": "npm run build && npm run test && npm run type-check"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "claude-desktop",
    "ai-assistant",
    "typescript",
    "productivity",
    "context-management",
    "semantic-search",
    "vector-embeddings",
    "persistent-memory",
    "task-management",
    "workflow-automation",
    "secure-commands",
    "file-operations",
    "sqlite",
    "anthropic"
  ],
  "author": "Baebu <bae.bu.8@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Baebu/context-savvy-mcp.git"
  },
  "homepage": "https://github.com/Baebu/context-savvy-mcp#readme",
  "bugs": {
    "url": "https://github.com/Baebu/context-savvy-mcp/issues"
  },
  "license": "MIT",
  "files": [
    "dist/",
    "config/server.example.yaml",
    "scripts/claude-config.js",
    "scripts/quick-setup.js",
    "scripts/health-check.js",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "@tensorflow/tfjs-node": "^4.15.0",
    "better-sqlite3": "^11.10.0",
    "convict": "^6.2.4",
    "fastmcp": "^2.0.0",
    "glob": "^10.3.10",
    "inversify": "^6.0.2",
    "lru-cache": "^10.0.0",
    "node-cron": "^3.0.3",
    "p-queue": "^8.0.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.1",
    "stream-json": "^1.8.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "ws": "^8.18.2",
    "yaml": "^2.3.4",
    "zod": "^3.24.3",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/convict": "^6.1.6",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/lru-cache": "^7.10.10",
    "@types/node": "^24.0.3",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test && npm run type-check"
    }
  }
}
